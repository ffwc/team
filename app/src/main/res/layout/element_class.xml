<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/eachclass_notice_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:background="#F0F0F0">

        <android.support.v4.view.ViewPager
            android:id="@+id/eachclass_notice"
            android:layout_width="@dimen/dp_355"
            android:layout_height="@dimen/dp_140"
            android:layout_marginLeft="@dimen/dp_10"


            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/eachlass_notice_border"></android.support.v4.view.ViewPager>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/eachclass_catalog_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_82">

        <TextView
            android:id="@+id/eachclass_catalog"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_21"
            android:text="学习单元(2)"
            android:textColor="#FF3C4B56"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eachclass_allccatalog"
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_toLeftOf="@id/eachclass_allccatalogunfold"
            android:text="全部单元"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/eachclass_allccatalogunfold"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_31"
            android:src="@mipmap/icon_down" />

        <TextView
            android:layout_width="@dimen/dp_243"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_52"
            android:text="已隐藏手机无法浏览的不含直播的学习单元。"
            android:textColor="#FF9A9A9A"
            android:textSize="@dimen/sp_12" />


    </RelativeLayout>

</LinearLayout>