<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EachClassActivity">
    <RelativeLayout
        android:id="@+id/eachclass_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
        android:id="@+id/eachclass_return"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/icon_set_return_normal"
        android:layout_marginLeft="@dimen/dp_10"
        />
        <TextView
            android:id="@+id/eachclass_title"
            android:layout_toRightOf="@+id/eachclass_return"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="@string/title_eachclass"
            android:textStyle="bold"
            android:textSize="@dimen/dp_18"
            android:textColor="#FF3A414D"
            android:layout_width="@dimen/dp_171"
            android:layout_height="@dimen/dp_25" />

        <ImageView
            android:id="@+id/eachclass_correlation"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/information"
             />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eachclass_notice_layout"
        android:layout_width="match_parent"
        android:background="#F0F0F0"
        android:layout_height="@dimen/dp_180">
        
        <android.support.v4.view.ViewPager
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/eachlass_notice_border"


            android:id="@+id/eachclass_notice"
            android:layout_width="@dimen/dp_355"
            android:layout_height="@dimen/dp_140"></android.support.v4.view.ViewPager>



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/eachclass_catalog_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_82">
        <TextView
            android:id="@+id/eachclass_catalog"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_25"
            android:text="学习单元(2)"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_14"
            android:textColor="#FF3C4B56"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            />

        <TextView
            android:id="@+id/eachclass_allccatalog"
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_toLeftOf="@id/eachclass_allccatalogunfold"
            android:text="全部单元"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />
        <ImageView
            android:id="@+id/eachclass_allccatalogunfold"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"

            android:layout_marginTop="@dimen/dp_31"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/icon_down"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_width="@dimen/dp_243"
            android:layout_height="@dimen/dp_20"
            android:text="已隐藏手机无法浏览的不含直播的学习单元。"
            android:textColor="#FF9A9A9A"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_52"
            />


    </RelativeLayout>



</LinearLayout>