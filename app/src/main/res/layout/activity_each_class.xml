<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EachClassActivity">
    <RelativeLayout
        android:id="@+id/eachclass_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
        android:id="@+id/eachclass_return"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:src="@mipmap/icon_set_return_normal"
        android:layout_marginLeft="@dimen/dp_10"
        />
        <TextView
            android:id="@+id/eachclass_title"
            android:layout_toRightOf="@+id/eachclass_return"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_60"
            android:text="@string/title_eachclass"
            android:textStyle="bold"
            android:textSize="@dimen/dp_18"
            android:textColor="#FF3A414D"
            android:layout_width="@dimen/dp_171"
            android:layout_height="@dimen/dp_25" />

        <ImageView
            android:id="@+id/eachclass_correlation"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_21"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/information"
             />


    </RelativeLayout>




    <FrameLayout
        android:id="@+id/eachclass_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>

    <com.hjm.bottomtabbar.BottomTabBar
        android:id="@+id/eachclass_tabControl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"></com.hjm.bottomtabbar.BottomTabBar>
    
</LinearLayout>