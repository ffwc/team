<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/quiz_incl"
        layout="@layout/classunit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/quiz_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quiz_incl"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_3"></android.support.v7.widget.RecyclerView>
</RelativeLayout>