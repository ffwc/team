<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginTop="@dimen/dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/tlak_title"

    >
<View
    android:layout_marginLeft="13dp"
    android:layout_width="6dp"
    android:layout_height="20dp"
    android:background="#F9BA00"
    />
    <TextView
        android:layout_marginLeft="@dimen/dp_16"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="шоишо║()"
        android:id="@+id/tlak_size"
        />

</LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/tlak_recycle"
        android:padding="15dp"
        ></android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >

<LinearLayout
    android:background="@drawable/tlakshape_edit"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
            <ImageView
                android:id="@+id/tlak_edit"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_tlakedit_img"
                android:layout_marginLeft="8dp"
                />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:hint="@string/tlakedit_string"
     android:background="@null"

    />

</LinearLayout>
    </RelativeLayout>
</RelativeLayout>